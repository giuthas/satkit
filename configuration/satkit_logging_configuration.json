{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(name)s - %(levelname)s - %(message)s"
        },
        "detailed": {
            "format": "%(asctime)s %(name)-8s %(filename)-12s %(lineno)-6s %(funcName)s \n\t %(levelname)-8s %(message)s"
        }
    },
    "handlers": {
        "file": {
            "filename": "satkit.log",
            "mode": "w",
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "detailed",
            "encoding": "utf-8"
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": [
            "file"
        ]
    }
}